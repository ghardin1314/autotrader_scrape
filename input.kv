#:kivy 1.11.1

<MainArea>:
    orientation: 'vertical'
    size_hint_x: .8
    size_hint_y: 1
    padding: 10
    spacing: 10
    Label:
        text: 'Choose A Car:'
        size_hint_x: 1
        size_hint_y: .5
    Button:
        text: 'Choose A Make:'
        size_hint_x: 1
        size_hint_y: 1
        background_color: 0, 1, 0, 1
    Button:
        text: 'Choose A Model:'
        size_hint_x: 1
        size_hint_y: 1
        background_color: 0, 0, 1, 1
    Button:
        text: 'Choose A Trim:'
        size_hint_x: 1
        size_hint_y: 1
        background_color: 0, 1, 1, 1

<SideMenu>:
    size_hint_x: .2
    size_hint_y: 1
    Label:
        text: 'Side Menu'

<Body>:
    oridentation: 'horizontal'
    size_hint_x: 1
    size_hint_y: .7
    SideMenu:
    MainArea:

<Header>:
    size_hint_x: 1
    size_hint_y: .1
    Label:
        text: 'Header Menu'

<Footer>:
    size_hint_x: 1
    size_hint_y: .2
    Button:
        text: 'Go!'

<TotalSpace>:
    orientation: 'vertical'
    Header:
    Body:
    Footer: